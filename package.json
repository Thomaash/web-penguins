{
    "name": "web-penguins",
    "version": "0.1.0",
    "license": "ISC",
    "main": "dist/cjs.js",
    "module": "dist/esm.js",
    "browser": "dist/umd.js",
    "types": "dist/types",
    "files": [
        "LICENSE",
        "README.md",
        "dist/**/*"
    ],
    "scripts": {
        "build": "npm run build:umd && npm run build:modules && npm run build:types && npm run build:demo",
        "build:demo": "webpack --config webpack.demo.js -p",
        "build:modules": "rollup --config rollup.config.js",
        "build:types": "tsc --project tsconfig.types.json",
        "build:umd": "webpack --config webpack.umd.js -p",
        "clean": "rimraf 'dist/*' 'demo/*' 'web-penguins-*.tgz'",
        "clean-build": "npm run clean && npm run build",
        "fix": "eslint --fix --ext .js,.ts .",
        "lint": "eslint --ext .js,.ts .",
        "serve": "webpack-dev-server --progress --profile --color --watch --mode development --config webpack.demo.js",
        "serve:external": "npm run serve -- --host 0.0.0.0",
        "type-check": "tsc --noEmit",
        "type-check:watch": "npm run type-check -- --watch"
    },
    "devDependencies": {
        "@babel/cli": "^7.2.3",
        "@babel/core": "^7.4.0",
        "@babel/plugin-proposal-class-properties": "^7.4.0",
        "@babel/plugin-proposal-object-rest-spread": "^7.4.0",
        "@babel/plugin-transform-runtime": "^7.4.4",
        "@babel/preset-env": "^7.4.1",
        "@babel/preset-typescript": "^7.3.3",
        "@babel/runtime": "^7.4.4",
        "@typescript-eslint/eslint-plugin": "^1.7.0",
        "@typescript-eslint/parser": "^1.7.0",
        "awesome-typescript-loader": "^5.2.1",
        "babel-loader": "^8.0.5",
        "copy-webpack-plugin": "^5.0.3",
        "eslint": "^5.16.0",
        "eslint-config-standard-with-typescript": "^7.0.0",
        "eslint-loader": "^2.1.2",
        "eslint-plugin-import": "^2.17.2",
        "eslint-plugin-node": "^8.0.1",
        "eslint-plugin-promise": "^4.1.1",
        "eslint-plugin-standard": "^4.0.0",
        "rimraf": "^2.6.3",
        "rollup": "^1.12.2",
        "rollup-plugin-alias": "^1.5.1",
        "rollup-plugin-typescript2": "^0.21.0",
        "source-map-loader": "^0.2.4",
        "temp-dir": "^2.0.0",
        "typescript": "^3.3.3",
        "webpack": "^4.30.0",
        "webpack-cli": "^3.3.1",
        "webpack-dev-server": "^3.3.1",
        "webpack-merge": "^4.2.1"
    },
    "dependencies": {
        "line-intersect": "^2.2.0",
        "web-animations-js": "^2.3.1"
    }
}
